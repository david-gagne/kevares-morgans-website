---
import AtIcon from "../images/at-icon.svg";
import PhoneIcon from "../images/phone-icon.svg";
import InstagramIcon from "../images/instagram-icon.svg";
---

<footer class="h4 flex justify-center items-center relative bottom-0 mv4">
  <div>
    <div class="mt4">
      <div class="fl w-third ph3 tc">
        <!-- email -->
        <a class="link" href="">
          <img src={AtIcon} alt="" width="24" />
        </a>
      </div>

      <div class="fl w-third ph3 tc">
        <!-- phone -->
        <a class="link" href="">
          <img src={PhoneIcon} alt="" width="24" />
        </a>
      </div>

      <div class="fl w-third ph3 tc">
        <!-- Instagram -->
        <a class="link" href="">
          <img src={InstagramIcon} alt="" width="24" />
        </a>
      </div>
    </div>

    <div class="w-100 flex justify-center items-center">
      <p class="f6 tc w-100 ma0 mt5">
        &copy; {new Date().getFullYear()} Kevares Morgan
      </p>
    </div>
  </div>
</footer>
